# Default MQTT connection to use
MQTT_DEFAULT_CONNECTION=hivemq

# HiveMQ Cloud connection settings
MQTT_HIVEMQ_HOST=1dadsadsas1.eu.hivemq.cloud
MQTT_HIVEMQ_PORT=8883
MQTT_HIVEMQ_CLIENT_ID=laravel-backend
MQTT_HIVEMQ_CLEAN_SESSION=true
MQTT_HIVEMQ_ENABLE_LOGGING=true
MQTT_HIVEMQ_LOG_CHANNEL=stack

# Mosquitto connection settings (optional)
MQTT_MOSQUITTO_HOST=test.mosquitto.org
MQTT_MOSQUITTO_PORT=1883
MQTT_MOSQUITTO_CLIENT_ID=laravel-mosquitto
MQTT_MOSQUITTO_CLEAN_SESSION=true
MQTT_MOSQUITTO_ENABLE_LOGGING=true

# TLS settings (applied to all connections that use TLS)
MQTT_TLS_ENABLED=true
MQTT_TLS_VERIFY_PEER=true
MQTT_TLS_CA_FILE=certificates/www-hivemq-com.pem

# Authentication settings (applied to all connections)
MQTT_AUTH_USERNAME=fgdfgfdgfd
MQTT_AUTH_PASSWORD=gfdgdfgfdgfd

# HTTP API settings
HTTP_SERVER_PORT=8080

# Logging settings
LOG_LEVEL=info
LOG_FORMAT=text

# API authentication settings
API_KEY_ENABLED=false
API_KEYS=1212122,45545

# Database settings
# Options: sqlite, mongodb
DB_CONNECTION=sqlite
DB_PATH=mqtt-messages.db

# MongoDB settings (used when DB_CONNECTION=mongodb)
# DB_CONNECTION=mongodb
# DB_PORT=27020
# DB_URI=mongodb://127.0.0.1:27020/laravel
# DB_DATABASE=mqtt_messages
# DB_USERNAME=
# DB_PASSWORD=

# Webhook settings
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-laravel-app.com/api/mqtt/webhook
WEBHOOK_METHOD=POST
WEBHOOK_TIMEOUT=10
WEBHOOK_RETRY_COUNT=3
WEBHOOK_RETRY_DELAY=5
